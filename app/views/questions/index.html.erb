<div class="row colorFFF952 rounded">

  <div class="col-8">
    <h1 class="display-4 mt-4">
      Cadastre novas questões e dinamize cada vez mais o seu estudo.</h1>
  </div>

  <div class="col-4">
      <%= image_tag 'logo.png', class: 'logoinicio', style:'width:280px'%>
      <br>
  </div>
</div>

<br>

<div class="card">
  <h3 class="card-header clearfix">
    Questões
    <span class='float-right'>
      <%= link_to 'Nova Questão', new_question_path, class: "btn btn-primary btn-outline-success"%>
    </span>
  </h3>

  <div class="card-body">
    <table class="table  table-striped table-secondary">
      <thead>
        <tr>
          <th>Descrição</th>
          <th>Ativo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.description %></td>
            <td><%= question.active? ? 'Ativa' : 'Inativa' %></td>
            <td><%= link_to 'Mostrar', question, class: 'text-info' %></td>
            <td><%= link_to 'Editar', edit_question_path(question), class: 'text-info' %></td>
            <td><%= link_to 'Excluir', question, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'text-info' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
