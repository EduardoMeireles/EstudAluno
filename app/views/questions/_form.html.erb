<div class='card'>
  <div class='card-body'>
    <%= form_with(model: question, local: true) do |form| %>
      <% if question.errors.any? %>

        <div id="error_explanation">
          <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

          <ul>
          <% question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      

      <div class="form-row mb-3">
        <%= form.label :type, 'Tipo' %>
        <%= form.select :type, Question::tipos.collect{ |a| [a.last, a.first] }, 
            {prompt:'Tipo da Questão'},
            {id: :question_type, class: 'form-control'} %>
      </div>

      <div class="form-row mb-2">
        <%= form.label :description, 'Questão' %>
        <%= form.text_area :description, id: :question_description, placeholder: 'Descrição', class: 'form-control', rows: '10'%>
      </div>

      <div class="form-group">
          <div class="form-check">
            <%= form.check_box :active, id: :question_active, class: 'form-check-input' %>
            <%= form.label :active, 'Ativa', class: 'form-check-label' %>
          </div>
        </div>

      <div class="form-group">
        <%= form.fields_for  :alternatives do |alternative| %>
          <%= render 'alternative_fields', f: alternative %>
          <%= link_to_add_association 'Adicionar Alternativa', form, :alternatives, class: 'btn btn-sm btn-success' %>
        <% end %>
      </div>
    <%= form.submit 'Criar Questão', class: 'btn btn-warning' %>

    <% end %>
  </div>
</div>